<li id='teacher-subject-<%= @teacher_subject.id %>'>
  <%= form_with model: @teacher_subject, remote: true do |form| %>
    <%= render partial: 'shared/errors', locals: { model: @teacher_subject } %>

    <div class="field">
      <%= form.number_field :level %>

      <%= form.submit 'Update' %>
      <%= link_to 'Remove', teacher_subject_path(@teacher_subject), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Cancel', teacher_subject_path(@teacher_subject), remote: true %>
    </div>
  <% end %>
</li>
